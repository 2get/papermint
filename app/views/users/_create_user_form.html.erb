<div class="create_user_form">
<%= form_for(@user) do |f| %>
  <fieldset>
    <legend>新規登録</legend>

    <div class="field" id="user_input">
      <%= f.label :name, '名前' %>
      <%= f.text_field :name , options = {:placeholder => 'ユーザー名' } %>
    </div>
    <div class="field" id="user_input">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.text_field :email , options = {:placeholder => 'メールアドレス' } %>
    </div>
    <div class="field" id="user_input">
      <%= f.label :password, 'パスワード' %>
      <%= f.password_field :password , options = {:placeholder => 'パスワード' } %>
    </div>
    <div class="field" id="user_input">
      <%= f.label :password_confirmation, '確認' %>
      <%= f.password_field :password_confirmation , options = {:placeholder => 'パスワードの確認' } %>
    </div>
    <div class="field" id="submit2">
      <%= image_submit_tag("submit_02.gif") %>
    </div>

  </fieldset>
<% end %>

</div>

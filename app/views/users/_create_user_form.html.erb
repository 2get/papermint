<div class="create_user_form">
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <legend>新規登録</legend>

    <div class="field">
      <%= f.label :name, '名前' %>
      <%= f.text_field :name , options = {:placeholder => 'ユーザー名' } %>
    </div>
    <div class="field">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.text_field :email , options = {:placeholder => 'メールアドレス' } %>
    </div>
    <div class="field">
      <%= f.label :password, 'パスワード' %>
      <%= f.password_field :password , options = {:placeholder => 'パスワード' } %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, '確認' %>
      <%= f.password_field :password_confirmation , options = {:placeholder => 'パスワードの確認' } %>
    </div>
    <div class="field" id="submit2">
      <%= image_submit_tag("submit_02.gif") %>
    </div>

  </fieldset>
<% end %>

</div>
